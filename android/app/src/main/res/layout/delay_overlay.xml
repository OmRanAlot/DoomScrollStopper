<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1B41"
    android:padding="32dp">

    <!-- Header Chip -->
    <LinearLayout
        android:id="@+id/headerChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/overlay_chip_bg"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/pulse_dot"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEEP BREATH REQUIRED"
            android:textSize="10sp"
            android:textColor="#C2E7DA"
            android:textStyle="bold"
            android:letterSpacing="0.3" />
    </LinearLayout>

    <!-- Main Message Area -->
    <LinearLayout
        android:id="@+id/messageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/headerChip"
        app:layout_constraintBottom_toTopOf="@id/bottomSection"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Pause and reflect. Is this how you want to spend your time?"
            android:textSize="28sp"
            android:textColor="#F1FFE7"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAKE 10 SECONDS TO DECIDE"
            android:textSize="14sp"
            android:textColor="#66F1FFE7"
            android:textAlignment="center"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="48dp" />

        <!-- Progress Bar Section -->
        <FrameLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/custom_progress_bar" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="WAIT"
                android:textSize="10sp"
                android:textColor="#99C2E7DA"
                android:textStyle="bold"
                android:letterSpacing="0.2" />

            <TextView
                android:id="@+id/countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textSize="10sp"
                android:textColor="#C2E7DA"
                android:textStyle="bold"
                android:letterSpacing="0.2" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="CONTINUE TO APP"
            android:textSize="12sp"
            android:textColor="#66F1FFE7"
            android:textStyle="bold"
            android:letterSpacing="0.2"
            android:background="@drawable/disabled_btn_bg"
            android:visibility="visible"
            android:enabled="false"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="I'M DONE FOR NOW"
            android:textSize="12sp"
            android:textColor="#1A1B41"
            android:textStyle="bold"
            android:letterSpacing="0.2"
            android:background="@drawable/primary_btn_bg"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YOUR FOCUS IS YOUR MOST VALUABLE ASSET"
            android:textSize="10sp"
            android:textColor="#33F1FFE7"
            android:textAlignment="center"
            android:letterSpacing="0.1"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>